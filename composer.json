{
    "name": "stubbles/input",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Stubbles Input enables to handle input data via validation and filtering.",
    "require": {
        "php": ">=5.6.0",
        "stubbles/values": "^7.2",
        "stubbles/reflect": "^7.0"
    },
    "require-dev": {
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^5.4",
        "bovigo/callmap": "^2.0",
        "bovigo/assert": "^1.6",
        "stubbles/date": "^5.5",
        "stubbles/peer": "^7.1"
    },
    "suggest": {
        "stubbles/date": "To filter input params as date or datespan instances.",
        "stubbles/peer": "To filter input params as instances of stubbles\\peer\\http\\HttpUri"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\input\\": "src/main/php"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "6.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
