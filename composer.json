{
    "name": "stubbles/input",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Stubbles Input enables to handle input data via validation and filtering.",
    "require": {
        "php": "^7.3",
        "ext-iconv": "*",
        "stubbles/values": "^9.0",
        "stubbles/reflect": "^9.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.8",
        "phpunit/phpunit": "^8.4",
        "bovigo/callmap": "^5.2.1",
        "bovigo/assert": "^5.1.1",
        "stubbles/date": "^8.0.1",
        "stubbles/peer": "^9.0.1"
    },
    "suggest": {
        "stubbles/date": "To filter input params as date or datespan instances.",
        "stubbles/peer": "To filter input params as instances of stubbles\\peer\\http\\HttpUri"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\input\\": "src/main/php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "stubbles\\input\\": "src/test/php"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "8.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
