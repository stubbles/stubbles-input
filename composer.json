{
    "name": "stubbles/input",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Stubbles Input enables to handle input data via validation and filtering.",
    "require": {
        "php": "^8.2",
        "ext-iconv": "*",
        "ext-json": "*",
        "stubbles/values": "^11.0",
        "stubbles/reflect": "^10.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.11",
        "phpunit/phpunit": "^10.5",
        "bovigo/callmap": "^8.0",
        "bovigo/assert": "^8.0",
        "stubbles/date": "^9.0",
        "stubbles/peer": "^10.0"
    },
    "suggest": {
        "stubbles/date": "To filter input params as date or datespan instances.",
        "stubbles/peer": "To filter input params as instances of stubbles\\peer\\http\\HttpUri"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\input\\": "src/main/php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "stubbles\\input\\": "src/test/php"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit"
    }
}
